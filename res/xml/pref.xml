<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory android:summary="AFWall+ Options"
                        android:title="AFWall+ Preferences" >
                        
       <CheckBoxPreference android:key="notifyAppInstall"
                           android:summary="Enable will notify to open AFWall+ on new installtions"
                           android:title="Notify on new installs" />

       <CheckBoxPreference android:key="showToast"
                           android:title="Disable Toast Messages" />
       
       <!-- Colorpicker -->
       <net.margaritov.preference.colorpicker.ColorPickerPreference 
			android:key="sysColor"
			android:title="System Apps Highlight" 
			android:summary="Highlight system applications"
			android:defaultValue="0xff000000" />
			
       <CheckBoxPreference android:key="disableUSB3gRule"
                           android:summary="Prevent AFWall to apply 3g rules when using wired USB Connection"
                           android:title="Disable 3G rules on Wired USB" />

       <CheckBoxPreference android:title="Hide application icons"
                           android:key="disableIcons"
                           android:summary="Hide icons" />
    </PreferenceCategory>

</PreferenceScreen>