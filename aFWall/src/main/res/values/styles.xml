<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>



    <!-- Dark style for all standard Locale and Locale plug-in Activity instances -->
    <style name="Theme.Locale.Dark" parent="android:Theme" />

     <style name="AppBaseTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
        <item name="android:fitsSystemWindows">true</item>
         <item name="md_dark_theme">true</item>
         <item name="md_title_color">#0F9D58</item>
         <item name="md_content_color">#ffffffff</item>
     </style>

    <style name="MyActionBarTheme" parent="Theme.AppCompat">
        <item name="android:icon">@drawable/notification</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:titleTextStyle">@style/MyTextAppearance</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <style name="SettingsTheme" parent="style/Theme.AppCompat.NoActionBar">
            <item name="android:windowNoTitle">false</item>
            <item name="android:windowActionBar">true</item>
            <item name="android:textColor">#ffffff</item>
            <item name="android:titleTextStyle">@style/MyTextAppearance</item>
            <item name="colorPrimary">@color/ColorPrimary</item>
            <item name="android:icon">@drawable/notification</item>
            <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>

    <style name="MyTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:icon">@drawable/notification</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#0F9D58</item>
    </style>
</resources>